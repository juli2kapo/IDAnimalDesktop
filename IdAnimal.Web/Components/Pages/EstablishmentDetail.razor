@page "/establishments/{Id:int}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using IdAnimal.Shared.DTOs
@using IdAnimal.Web.Services
@inject EstablishmentService EstablishmentService
@inject CattleService CattleService
@inject NavigationManager Navigation

<PageTitle>Detalle del Establecimiento - IdAnimal</PageTitle>

<div class="page-container">
    <div class="page-header">
        <button class="btn btn-secondary" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
        <div class="header-actions">
            <button class="btn btn-primary" @onclick="ShowEditModal">
                <i class="bi bi-pencil"></i> Editar
            </button>
            <button class="btn btn-danger" @onclick="ShowDeleteConfirm">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" aria-label="Close" @onclick="CloseErrorMessage"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" aria-label="Close" @onclick="CloseSuccessMessage"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (establishment == null)
    {
        <div class="alert alert-danger">
            No se encontró el establecimiento solicitado.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Info Card -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="establishment-title">
                            <i class="bi bi-building"></i> @establishment.Name
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Provincia</label>
                                <p class="detail-value">
                                    <i class="bi bi-geo-alt"></i> @(establishment.Province ?? "No especificada")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Código Postal</label>
                                <p class="detail-value">
                                    <i class="bi bi-mailbox"></i> @(establishment.PostalCode ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">RENSPA</label>
                                <p class="detail-value">
                                    <i class="bi bi-file-text"></i> @(establishment.Renspa ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Cantidad de Ganado</label>
                                <p class="detail-value">
                                    <i class="bi bi-tag"></i> @establishment.CattleCount cabezas
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Fecha de Registro</label>
                                <p class="detail-value">
                                    <i class="bi bi-calendar"></i> @establishment.RegisterDate.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Fecha de Registro del Establecimiento</label>
                                <p class="detail-value">
                                    <i class="bi bi-calendar-check"></i> @establishment.EstablishmentRegisterDate.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Sidebar -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-bar-chart"></i> Estadísticas</h5>
                    </div>
                    <div class="card-body">
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="bi bi-tag-fill"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-label">Total de Ganado</div>
                                <div class="stat-value">@establishment.CattleCount</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="bi bi-calendar3"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-label">Años de Operación</div>
                                <div class="stat-value">@GetYearsOfOperation()</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-info-circle"></i> Información</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-secondary" style="font-size: 14px;">
                            Este establecimiento está registrado en el sistema IdAnimal desde el @establishment.RegisterDate.ToString("dd/MM/yyyy").
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cattle List -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-tag"></i> Ganado Registrado (@cattleList.Count)</h5>
                    </div>
                    <div class="card-body">
                        @if (loadingCattle)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Cargando ganado...</span>
                                </div>
                            </div>
                        }
                        else if (cattleList.Count == 0)
                        {
                            <div class="empty-state-small">
                                <i class="bi bi-tag empty-state-icon"></i>
                                <p>No hay ganado registrado en este establecimiento</p>
                            </div>
                        }
                        else
                        {
                            <div class="cattle-grid-small">
                                @foreach (var cattle in cattleList)
                                {
                                    <div class="cattle-card-small" @onclick="() => NavigateToCattleDetail(cattle.Id)">
                                        <div class="cattle-card-header">
                                            <strong>@cattle.Caravan</strong>
                                        </div>
                                        <div class="cattle-card-body">
                                            <div class="cattle-info-item">
                                                <i class="bi bi-gender-ambiguous"></i>
                                                <span>@(cattle.Gender ?? "N/A")</span>
                                            </div>
                                            <div class="cattle-info-item">
                                                <i class="bi bi-speedometer"></i>
                                                <span>@(cattle.Weight?.ToString() ?? "N/A") kg</span>
                                            </div>
                                            <div class="cattle-info-item">
                                                <i class="bi bi-geo-alt"></i>
                                                <span>@(cattle.Origin ?? "N/A")</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (showEditModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Establecimiento</h5>
                    <button type="button" class="btn-close" @onclick="HideEditModal"></button>
                </div>
                <EditForm Model="@establishment" OnValidSubmit="@UpdateEstablishment">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre *</label>
                                <InputText class="form-control" @bind-Value="establishment.Name" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Provincia *</label>
                                <InputText class="form-control" @bind-Value="establishment.Province" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Código Postal</label>
                                <InputText class="form-control" @bind-Value="establishment.PostalCode" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">RENSPA</label>
                                <InputText class="form-control" @bind-Value="establishment.Renspa" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideEditModal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Guardar Cambios
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showDeleteConfirmModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteConfirmModal = false"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el establecimiento "<strong>@establishment?.Name</strong>"?</p>
                    @if (establishment?.CattleCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Este establecimiento tiene @establishment.CattleCount cabeza(s) de ganado registradas.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteConfirmModal = false">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteEstablishment" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

