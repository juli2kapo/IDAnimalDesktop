@code {
    [Parameter]
    public int Id { get; set; }

    private EstablishmentDto? establishment;
    private List<CattleDto> cattleList = new();
    private bool isLoading = true;
    private bool loadingCattle = false;
    private bool isSaving = false;
    private bool showEditModal = false;
    private bool showDeleteConfirmModal = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine($"[EstablishmentDetail] OnInitializedAsync called for establishment ID: {Id}");
        await LoadEstablishment();
        await LoadCattle();
    }

    private async Task LoadEstablishment()
    {
        isLoading = true;
        Console.WriteLine($"[EstablishmentDetail] LoadEstablishment started for ID: {Id}");

        try
        {
            Console.WriteLine($"[EstablishmentDetail] Calling EstablishmentService.GetByIdAsync({Id})");
            establishment = await EstablishmentService.GetByIdAsync(Id);

            if (establishment != null)
            {
                Console.WriteLine($"[EstablishmentDetail] Successfully received data for establishment: {establishment.Name}");
            }
            else
            {
                Console.WriteLine($"[EstablishmentDetail] API returned null for establishment ID: {Id}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[EstablishmentDetail] Exception in LoadEstablishment: {ex.GetType().Name} - {ex.Message}");
            errorMessage = "Error al cargar los datos. Mostrando datos de ejemplo.";
            establishment = GetMockEstablishment(Id);
            Console.WriteLine($"[EstablishmentDetail] Loaded mock data for establishment ID: {Id}");
        }
        finally
        {
            isLoading = false;
            Console.WriteLine($"[EstablishmentDetail] LoadEstablishment completed. isLoading = false");
        }
    }

    private EstablishmentDto GetMockEstablishment(int id)
    {
        var random = new Random(id);
        var provinces = new[] { "Buenos Aires", "Santa Fe", "Córdoba", "Entre Ríos", "La Pampa" };

        return new EstablishmentDto
        {
            Id = id,
            Name = $"Establecimiento {id}",
            Province = provinces[random.Next(provinces.Length)],
            PostalCode = (3000 + random.Next(5000)).ToString(),
            Renspa = $"{random.Next(10, 30)}-{random.Next(1, 10)}-{random.Next(10000, 99999)}",
            CattleCount = random.Next(50, 300),
            RegisterDate = DateTime.Now.AddMonths(-random.Next(1, 24)),
            EstablishmentRegisterDate = DateTime.Now.AddYears(-random.Next(1, 10))
        };
    }

    private async Task LoadCattle()
    {
        loadingCattle = true;
        Console.WriteLine($"[EstablishmentDetail] LoadCattle started for establishment ID: {Id}");

        try
        {
            var allCattle = await CattleService.GetAllAsync();
            cattleList = allCattle.Where(c => c.EstablishmentId == Id).ToList();
            Console.WriteLine($"[EstablishmentDetail] Loaded {cattleList.Count} cattle for establishment {Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[EstablishmentDetail] Exception in LoadCattle: {ex.GetType().Name} - {ex.Message}");
            cattleList = GetMockCattle();
            Console.WriteLine($"[EstablishmentDetail] Loaded {cattleList.Count} mock cattle");
        }
        finally
        {
            loadingCattle = false;
            Console.WriteLine($"[EstablishmentDetail] LoadCattle completed");
        }
    }

    private List<CattleDto> GetMockCattle()
    {
        var random = new Random(Id);
        var count = establishment?.CattleCount ?? random.Next(5, 15);
        var genders = new[] { "Macho", "Hembra" };
        var origins = new[] { "Angus", "Hereford", "Brahman", "Charolais" };
        var list = new List<CattleDto>();

        for (int i = 1; i <= count; i++)
        {
            list.Add(new CattleDto
            {
                Id = Id * 100 + i,
                Caravan = $"A{Id:D2}{i:D3}",
                EstablishmentId = Id,
                EstablishmentName = establishment?.Name,
                Gender = genders[random.Next(genders.Length)],
                Weight = random.Next(250, 650),
                Origin = origins[random.Next(origins.Length)],
                GDM = Math.Round((decimal)(random.NextDouble() * 1.5 + 0.5), 2),
                Age = random.Next(1, 8)
            });
        }

        return list;
    }

    private int GetYearsOfOperation()
    {
        if (establishment == null) return 0;
        var years = (DateTime.Now - establishment.EstablishmentRegisterDate).TotalDays / 365.25;
        return (int)Math.Floor(years);
    }

    private void NavigateToCattleDetail(int cattleId)
    {
        Console.WriteLine($"[EstablishmentDetail] Navigating to cattle detail: {cattleId}");
        Navigation.NavigateTo($"/cattle/{cattleId}");
    }

    private void GoBack()
    {
        Console.WriteLine("[EstablishmentDetail] GoBack button clicked");
        Navigation.NavigateTo("/establishments");
    }

    private void CloseErrorMessage()
    {
        Console.WriteLine($"[EstablishmentDetail] Error message closed: {errorMessage}");
        errorMessage = null;
    }

    private void CloseSuccessMessage()
    {
        Console.WriteLine($"[EstablishmentDetail] Success message closed: {successMessage}");
        successMessage = null;
    }

    private void ShowEditModal()
    {
        showEditModal = true;
    }

    private void HideEditModal()
    {
        showEditModal = false;
    }

    private void ShowDeleteConfirm()
    {
        showDeleteConfirmModal = true;
    }

    private async Task UpdateEstablishment()
    {
        if (establishment == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await EstablishmentService.UpdateAsync(establishment.Id, establishment);
            if (success)
            {
                successMessage = "Establecimiento actualizado correctamente";
                HideEditModal();
                await LoadEstablishment();
            }
            else
            {
                errorMessage = "Error al actualizar el establecimiento";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteEstablishment()
    {
        if (establishment == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await EstablishmentService.DeleteAsync(establishment.Id);
            if (success)
            {
                Navigation.NavigateTo("/establishments");
            }
            else
            {
                errorMessage = "Error al eliminar el establecimiento";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }
}
