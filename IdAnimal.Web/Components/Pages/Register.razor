@page "/register"
@using IdAnimal.Shared.DTOs
@using IdAnimal.Web.Services
@inject AuthService AuthService
@inject AuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Registro - IdAnimal</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Crear Cuenta</h1>
            <p>Sistema de Gestión de Ganado</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <EditForm Model="@registerRequest" OnValidSubmit="@HandleRegister">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="fullName">Nombre Completo</label>
                <InputText id="fullName" class="form-control" @bind-Value="registerRequest.FullName" placeholder="Juan Pérez" />
                <ValidationMessage For="@(() => registerRequest.FullName)" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" class="form-control" @bind-Value="registerRequest.Email" placeholder="tu@email.com" />
                <ValidationMessage For="@(() => registerRequest.Email)" />
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="registerRequest.Password" placeholder="••••••••" />
                <ValidationMessage For="@(() => registerRequest.Password)" />
            </div>

            <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                    <span> Registrando...</span>
                }
                else
                {
                    <span>Registrarse</span>
                }
            </button>
        </EditForm>

        <div class="register-link">
            <p>¿Ya tienes cuenta? <a href="/login">Inicia sesión aquí</a></p>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--primary-orange) 0%, var(--accent-orange) 100%);
        padding: 20px;
    }

    .login-card {
        background: var(--card-bg);
        border-radius: 12px;
        box-shadow: var(--shadow);
        padding: 40px;
        width: 100%;
        max-width: 450px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .login-header h1 {
        color: var(--accent-orange);
        font-size: 2.5rem;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .login-header p {
        color: var(--text-secondary);
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-block {
        width: 100%;
    }

    .register-link {
        text-align: center;
        margin-top: 20px;
    }

    .register-link p {
        color: var(--text-secondary);
    }
</style>

@code {
    private RegisterRequest registerRequest = new();
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AuthService.RegisterAsync(registerRequest);

            if (response != null)
            {
                await AuthStateProvider.LoginAsync(response.Token, response.UserId, response.Email, response.FullName);
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "El email ya está registrado o los datos son inválidos";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor. Por favor, intente nuevamente.";
        }
        finally
        {
            isLoading = false;
        }
    }
}
