@code {
    [Parameter]
    public int Id { get; set; }

    private CattleDto? cattle;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showEditModal = false;
    private bool showDeleteConfirmModal = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine($"[CattleDetail] OnInitializedAsync called for cattle ID: {Id}");
        await LoadCattle();
    }

    private async Task LoadCattle()
    {
        isLoading = true;
        Console.WriteLine($"[CattleDetail] LoadCattle started for ID: {Id}");

        try
        {
            Console.WriteLine($"[CattleDetail] Calling CattleService.GetByIdAsync({Id})");
            var detailDto = await CattleService.GetByIdAsync(Id);

            if (detailDto != null)
            {
                Console.WriteLine($"[CattleDetail] Successfully received data for cattle: {detailDto.Caravan}");
                cattle = new CattleDto
                {
                    Id = detailDto.Id,
                    Caravan = detailDto.Caravan,
                    Name = detailDto.Name,
                    Weight = detailDto.Weight,
                    Origin = detailDto.Origin,
                    Age = detailDto.Age,
                    Gender = detailDto.Gender,
                    GDM = detailDto.GDM,
                    EstablishmentId = detailDto.EstablishmentId,
                    EstablishmentName = detailDto.EstablishmentName,
                    ImageCount = detailDto.Images?.Count ?? 0,
                    VideoCount = detailDto.Videos?.Count ?? 0,
                    CustomData = detailDto.CustomData
                };
                Console.WriteLine($"[CattleDetail] Cattle DTO created successfully");
            }
            else
            {
                Console.WriteLine($"[CattleDetail] API returned null for cattle ID: {Id}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[CattleDetail] Exception in LoadCattle: {ex.GetType().Name} - {ex.Message}");
            Console.WriteLine($"[CattleDetail] Stack trace: {ex.StackTrace}");
            errorMessage = "Error al cargar los datos. Mostrando datos de ejemplo.";
            cattle = GetMockCattle(Id);
            Console.WriteLine($"[CattleDetail] Loaded mock data for cattle ID: {Id}");
        }
        finally
        {
            isLoading = false;
            Console.WriteLine($"[CattleDetail] LoadCattle completed. isLoading = false");
        }
    }

    private CattleDto GetMockCattle(int id)
    {
        var random = new Random(id);
        var establishments = new[] { "Estancia La Pampa", "Campo El Ombú", "Hacienda Los Teros" };
        var genders = new[] { "Macho", "Hembra" };
        var origins = new[] { "Angus", "Hereford", "Brahman", "Charolais" };

        return new CattleDto
        {
            Id = id,
            Caravan = $"A{id:D4}",
            EstablishmentName = establishments[random.Next(establishments.Length)],
            Weight = random.Next(250, 650),
            Origin = origins[random.Next(origins.Length)],
            Gender = genders[random.Next(genders.Length)],
            GDM = Math.Round((decimal)(random.NextDouble() * 1.5 + 0.5), 2),
            Age = random.Next(1, 8),
            ImageCount = random.Next(0, 5),
            VideoCount = random.Next(0, 2),
            CustomData = new Dictionary<string, string>
            {
                { "Raza", origins[random.Next(origins.Length)] },
                { "Color", random.Next(2) == 0 ? "Negro" : "Colorado" },
                { "Vacunado", random.Next(2) == 0 ? "Sí" : "No" }
            }
        };
    }

    private void GoBack()
    {
        Console.WriteLine("[CattleDetail] GoBack button clicked");
        Navigation.NavigateTo("/cattle");
    }

    private void CloseErrorMessage()
    {
        Console.WriteLine($"[CattleDetail] Error message closed: {errorMessage}");
        errorMessage = null;
    }

    private void CloseSuccessMessage()
    {
        Console.WriteLine($"[CattleDetail] Success message closed: {successMessage}");
        successMessage = null;
    }

    private void ShowEditModal()
    {
        showEditModal = true;
    }

    private void HideEditModal()
    {
        showEditModal = false;
    }

    private void ShowDeleteConfirm()
    {
        showDeleteConfirmModal = true;
    }

    private async Task UpdateCattle()
    {
        if (cattle == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await CattleService.UpdateAsync(cattle.Id, cattle);
            if (success)
            {
                successMessage = "Animal actualizado correctamente";
                HideEditModal();
                await LoadCattle();
            }
            else
            {
                errorMessage = "Error al actualizar el animal";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteCattle()
    {
        if (cattle == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await CattleService.DeleteAsync(cattle.Id);
            if (success)
            {
                Navigation.NavigateTo("/cattle");
            }
            else
            {
                errorMessage = "Error al eliminar el animal";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }
}
