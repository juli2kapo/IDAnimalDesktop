@page "/cattle/{Id:int}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using IdAnimal.Shared.DTOs
@using IdAnimal.Web.Services
@inject CattleService CattleService
@inject NavigationManager Navigation

<PageTitle>Detalle del Animal - IdAnimal</PageTitle>

<div class="page-container">
    <div class="page-header">
        <button class="btn btn-secondary" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Volver
        </button>
        <div class="header-actions">
            <button class="btn btn-primary" @onclick="ShowEditModal">
                <i class="bi bi-pencil"></i> Editar
            </button>
            <button class="btn btn-danger" @onclick="ShowDeleteConfirm">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @errorMessage
            <button type="button" class="btn-close" @onclick="CloseErrorMessage"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @successMessage
            <button type="button" class="btn-close" @onclick="CloseSuccessMessage"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (cattle == null)
    {
        <div class="alert alert-danger">
            No se encontró el animal solicitado.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Info Card -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="cattle-title">
                            <i class="bi bi-tag"></i> @cattle.Caravan
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Establecimiento</label>
                                <p class="detail-value">
                                    <i class="bi bi-building"></i> @(cattle.EstablishmentName ?? "No asignado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Género</label>
                                <p class="detail-value">
                                    <i class="bi bi-gender-ambiguous"></i> @(cattle.Gender ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Peso (kg)</label>
                                <p class="detail-value">
                                    <i class="bi bi-speedometer"></i> @(cattle.Weight?.ToString() ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Origen</label>
                                <p class="detail-value">
                                    <i class="bi bi-geo-alt"></i> @(cattle.Origin ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">GDM (Ganancia Diaria Media)</label>
                                <p class="detail-value">
                                    <i class="bi bi-graph-up"></i> @(cattle.GDM?.ToString() ?? "No especificado")
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="detail-label">Edad</label>
                                <p class="detail-value">
                                    <i class="bi bi-calendar"></i> @(cattle.Age?.ToString() ?? "No especificada")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Custom Data Card -->
                @if (cattle.CustomData != null && cattle.CustomData.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-list-check"></i> Datos Personalizados</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var customField in cattle.CustomData)
                                {
                                    <div class="col-md-6 mb-3">
                                        <label class="detail-label">@customField.Key</label>
                                        <p class="detail-value">@customField.Value</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Images & Videos Sidebar -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-images"></i> Imágenes (@cattle.ImageCount)</h5>
                    </div>
                    <div class="card-body">
                        @if (cattle.ImageCount > 0)
                        {
                            <div class="images-placeholder">
                                <i class="bi bi-image placeholder-icon"></i>
                                <p class="text-secondary mt-2">@cattle.ImageCount imagen(es) disponible(s)</p>
                                <button class="btn btn-primary btn-sm mt-2">
                                    <i class="bi bi-eye"></i> Ver Imágenes
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="images-placeholder">
                                <i class="bi bi-image placeholder-icon"></i>
                                <p class="text-secondary mt-2">No hay imágenes</p>
                                <button class="btn btn-primary btn-sm mt-2">
                                    <i class="bi bi-upload"></i> Subir Imagen
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-camera-video"></i> Videos (@cattle.VideoCount)</h5>
                    </div>
                    <div class="card-body">
                        @if (cattle.VideoCount > 0)
                        {
                            <div class="images-placeholder">
                                <i class="bi bi-camera-video placeholder-icon"></i>
                                <p class="text-secondary mt-2">@cattle.VideoCount video(s) disponible(s)</p>
                                <button class="btn btn-primary btn-sm mt-2">
                                    <i class="bi bi-eye"></i> Ver Videos
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="images-placeholder">
                                <i class="bi bi-camera-video placeholder-icon"></i>
                                <p class="text-secondary mt-2">No hay videos</p>
                                <button class="btn btn-primary btn-sm mt-2">
                                    <i class="bi bi-upload"></i> Subir Video
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (showEditModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Animal</h5>
                    <button type="button" class="btn-close" @onclick="HideEditModal"></button>
                </div>
                <EditForm Model="@cattle" OnValidSubmit="@UpdateCattle">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Caravana *</label>
                                <InputText class="form-control" @bind-Value="cattle.Caravan" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Peso (kg)</label>
                                <InputNumber class="form-control" @bind-Value="cattle.Weight" onkeydown="preventNonNumeric(event)" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Origen</label>
                                <InputText class="form-control" @bind-Value="cattle.Origin" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Género</label>
                                <select class="form-select" @bind="cattle.Gender">
                                    <option value="">Seleccione...</option>
                                    <option value="Macho">Macho</option>
                                    <option value="Hembra">Hembra</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">GDM</label>
                                <InputNumber class="form-control" @bind-Value="cattle.GDM" onkeydown="preventNonNumeric(event)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Edad</label>
                                <InputNumber class="form-control" @bind-Value="cattle.Age" onkeydown="preventNonNumeric(event)" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideEditModal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Guardar Cambios
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showDeleteConfirmModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteConfirmModal = false"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el animal con caravana "<strong>@cattle?.Caravan</strong>"?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteConfirmModal = false">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteCattle" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

