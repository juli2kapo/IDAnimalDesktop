                CattleCount = 178,
                RegisterDate = DateTime.Now.AddMonths(-9),
                EstablishmentRegisterDate = DateTime.Now.AddYears(-3)
            }
        };
    }

    private void NavigateToEstablishmentDetail(int establishmentId)
    {
        Console.WriteLine($"[Establishments] Navigating to establishment detail: {establishmentId}");
        Navigation.NavigateTo($"/establishments/{establishmentId}");
    }

    private void ShowAddModal()
    {
        currentEstablishment = new EstablishmentDto
        {
            RegisterDate = DateTime.Now,
            EstablishmentRegisterDate = DateTime.Now
        };
        isEditMode = false;
        showModal = true;
    }

    private void ShowEditModal(EstablishmentDto establishment)
    {
        currentEstablishment = new EstablishmentDto
        {
            Id = establishment.Id,
            Name = establishment.Name,
            Province = establishment.Province,
            PostalCode = establishment.PostalCode,
            Renspa = establishment.Renspa,
            RegisterDate = establishment.RegisterDate,
            EstablishmentRegisterDate = establishment.EstablishmentRegisterDate
        };
        isEditMode = true;
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
        currentEstablishment = new();
    }

    private async Task SaveEstablishment()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            bool success;
            if (isEditMode)
            {
                success = await EstablishmentService.UpdateAsync(currentEstablishment.Id, currentEstablishment);
                successMessage = success ? "Establecimiento actualizado correctamente" : null;
            }
            else
            {
                success = await EstablishmentService.CreateAsync(currentEstablishment);
                successMessage = success ? "Establecimiento creado correctamente" : null;
            }

            if (success)
            {
                HideModal();
                await LoadEstablishments();
            }
            else
            {
                errorMessage = "Error al guardar el establecimiento";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ConfirmDelete(EstablishmentDto establishment)
    {
        establishmentToDelete = establishment;
        showDeleteConfirm = true;
    }

    private async Task DeleteEstablishment()
    {
        if (establishmentToDelete == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var success = await EstablishmentService.DeleteAsync(establishmentToDelete.Id);

            if (success)
            {
                successMessage = "Establecimiento eliminado correctamente";
                showDeleteConfirm = false;
                await LoadEstablishments();
            }
            else
            {
                errorMessage = "Error al eliminar el establecimiento";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor";
        }
        finally
        {
            isSaving = false;
        }
    }
}
