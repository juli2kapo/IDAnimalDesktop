@page "/establishments"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using IdAnimal.Shared.DTOs
@using IdAnimal.Web.Services
@inject EstablishmentService EstablishmentService
@inject NavigationManager Navigation

<PageTitle>Establecimientos - IdAnimal</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Establecimientos</h1>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle"></i> Nuevo Establecimiento
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (establishments == null || !establishments.Any())
    {
        <div class="empty-state">
            <i class="bi bi-building empty-state-icon"></i>
            <h3>No hay establecimientos</h3>
            <p>Comienza agregando tu primer establecimiento</p>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Agregar Establecimiento
            </button>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover establishments-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Provincia</th>
                        <th>Código Postal</th>
                        <th>RENSPA</th>
                        <th>Ganado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var establishment in establishments)
                    {
                        <tr class="clickable-row" @onclick="() => NavigateToEstablishmentDetail(establishment.Id)">
                            <td><strong>@establishment.Name</strong></td>
                            <td>@establishment.Province</td>
                            <td>@establishment.PostalCode</td>
                            <td>@establishment.Renspa</td>
                            <td>
                                <span class="badge bg-primary">@establishment.CattleCount</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group" @onclick:stopPropagation="true">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(establishment)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(establishment)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Editar" : "Nuevo") Establecimiento</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <EditForm Model="@currentEstablishment" OnValidSubmit="@SaveEstablishment">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <InputText class="form-control" @bind-Value="currentEstablishment.Name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Provincia *</label>
                            <InputText class="form-control" @bind-Value="currentEstablishment.Province" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Código Postal</label>
                            <InputText class="form-control" @bind-Value="currentEstablishment.PostalCode" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">RENSPA</label>
                            <InputText class="form-control" @bind-Value="currentEstablishment.Renspa" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Guardar
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showDeleteConfirm)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteConfirm = false"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el establecimiento "<strong>@establishmentToDelete?.Name</strong>"?</p>
                    @if (establishmentToDelete?.CattleCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Este establecimiento tiene @establishmentToDelete.CattleCount cabeza(s) de ganado registradas.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteConfirm = false">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteEstablishment" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

