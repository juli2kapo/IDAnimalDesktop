        border-collapse: separate;
        border-spacing: 0;
    }

    .establishments-table,
    .establishments-table * {
        box-sizing: border-box;
    }

    .establishments-table thead {
        background-color: var(--primary-bg);
    }

    .establishments-table thead th {
        color: var(--accent-orange);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
        padding: 15px;
        border-bottom: 2px solid var(--border-color);
        border-top: none;
    }

    .establishments-table tbody tr {
        background-color: var(--card-bg) !important;
        border-bottom: 1px solid var(--border-color);
        transition: background-color 0.2s;
    }

    .establishments-table tbody tr.clickable-row {
        cursor: pointer;
    }

    .establishments-table tbody tr:hover {
        background-color: var(--hover-bg) !important;
    }

    .establishments-table tbody td {
        color: var(--text-primary) !important;
        padding: 15px;
        vertical-align: middle;
        border-top: none;
        background-color: transparent !important;
    }

    .establishments-table tbody td strong {
        color: var(--accent-orange);
    }

    .establishments-table .badge {
        background-color: var(--accent-orange) !important;
        color: var(--text-primary);
        font-size: 13px;
        padding: 5px 10px;
    }

    .establishments-table .btn-outline-primary {
        color: var(--accent-orange);
        border-color: var(--accent-orange);
    }

    .establishments-table .btn-outline-primary:hover {
        background-color: var(--accent-orange);
        border-color: var(--accent-orange);
        color: var(--text-primary);
    }

    .establishments-table .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

    .establishments-table .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: var(--text-primary);
    }

    .table-responsive {
        background-color: var(--card-bg);
        border-radius: 8px;
        box-shadow: var(--shadow);
    }
</style>

@code {
    private List<EstablishmentDto>? establishments;
    private EstablishmentDto currentEstablishment = new();
    private EstablishmentDto? establishmentToDelete;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showModal = false;
    private bool showDeleteConfirm = false;
    private bool isEditMode = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadEstablishments();
    }

    private async Task LoadEstablishments()
    {
        isLoading = true;
        try
        {
            establishments = await EstablishmentService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar los establecimientos. Mostrando datos de ejemplo.";
            establishments = GetMockEstablishments();
        }
        finally
        {
            isLoading = false;
        }
    }

