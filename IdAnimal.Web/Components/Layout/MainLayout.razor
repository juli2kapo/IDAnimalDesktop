@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using IdAnimal.Web.Services
@inject AuthStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main>
        @* ✅ Updated Header: Flexbox for alignment and better styling *@
        <div class="top-row px-4 d-flex justify-content-end align-items-center gap-3">
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-2">
                        @* Optional: You can add a user icon here if you use something like FontAwesome *@
                        <i class="fas fa-user-circle fs-4"></i>
                        
                        <span class="fw-bold">Hola, @context.User.Identity?.Name</span>
                    </div>
                    
                    <button class="btn btn-outline-danger btn-sm" @onclick="Logout">
                        Cerrar Sesión
                    </button>
                </Authorized>
                <NotAuthorized>
                    <a href="login" class="btn btn-primary btn-sm">Iniciar Sesión</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthStateProvider.LogoutAsync();
        NavManager.NavigateTo("/login", forceLoad: true); 
    }
}